<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :your_name %><br />
    <%= f.text_field :name, placeholder: "Someone", autofocus: true %>
  </div><br />

  <div class="field">
    <%= f.label :email_address %><br />
    <%= f.email_field :email, placeholder: "someone@gmail.com", autocomplete: "email" %>
  </div><br />

  <div class="field">
    <%= f.label :password %><br /r>
    <%= f.password_field :password, placeholder: "password", autocomplete: "new-password" %>
  </div><br />

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: "password", autocomplete: "new-password" %>
  </div><br />

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div><br />
<% end %>

<%= render "devise/shared/links" %>
